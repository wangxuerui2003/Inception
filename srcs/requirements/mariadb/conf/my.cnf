[mysqld]
# Bind MySQL to all available network interfaces
bind-address = 0.0.0.0

# Allow incoming connections from the WordPress container's IP address
# Replace 'wordpress_container_ip' with the actual IP address of your WordPress container
# Comment out or remove this line if both containers are on the same Docker network
# skip-networking

# Set the default character set and collation
character-set-server = utf8mb4
collation-server = utf8mb4_general_ci

# Set the maximum number of connections
max_connections = 100

# Set the maximum allowed packet size
max_allowed_packet = 64M

# Set the query cache size
query_cache_size = 32M

# Set the InnoDB buffer pool size
innodb_buffer_pool_size = 256M

# Set the InnoDB log file size
innodb_log_file_size = 64M

# Set the InnoDB file per table
innodb_file_per_table = 1

# Set the InnoDB flush method
innodb_flush_method = O_DIRECT

# Set the InnoDB flush log at transaction commit
innodb_flush_log_at_trx_commit = 1

# Set the InnoDB log buffer size
innodb_log_buffer_size = 8M
